{
  "name": "common-curriculum",
  "version": "1.0.0",
  "description": "Canvas LMS course management for CST349 and CST395",
  "private": true,
  "scripts": {
    "test": "node --test tests/run-tests.js",
    "generate-config": "node scripts/canvas-sync.js --action=generate-config --course=both",
    "canvas:sync": "node scripts/canvas-sync.js --action=fetch-assignments --course=both",
    "canvas:sync:349": "node scripts/canvas-sync.js --action=fetch-assignments --course=cst349",
    "canvas:sync:395": "node scripts/canvas-sync.js --action=fetch-assignments --course=cst395",
    "canvas:validate": "node scripts/canvas-sync.js --action=validate-config --course=both",
    "canvas:check": "node scripts/canvas-sync.js --action=validate-consistency --course=both",
    "canvas:courses": "node scripts/canvas-sync.js --action=list-courses",
    "canvas:rename": "node scripts/canvas-sync.js --action=rename-assignments --course=both",
    "canvas:rename:apply": "node scripts/canvas-sync.js --action=rename-assignments --course=both --dry-run=false",
    "canvas:create": "node scripts/canvas-sync.js --action=create-assignments --course=both",
    "canvas:create:apply": "node scripts/canvas-sync.js --action=create-assignments --course=both --dry-run=false",
    "canvas:update": "node scripts/canvas-sync.js --action=update-assignments --course=both",
    "canvas:update:apply": "node scripts/canvas-sync.js --action=update-assignments --course=both --dry-run=false"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "canvas",
    "lms",
    "education"
  ]
}
